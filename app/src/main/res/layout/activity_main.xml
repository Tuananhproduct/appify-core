<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.MainActivity">

    <com.example.appdemo.XToolbar
        android:id="@+id/x_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:xtb_canShowLine="true"
        app:xtb_textRight="Next"
        app:xtb_colorTextRight="@color/black"
        app:xtb_cardElevation="0dp"
        app:xtb_gravityTitle="start"
        app:xtb_iconLeft="@drawable/ic_back"
        app:xtb_title="Toolbar Example" />

    <com.example.appdemo.SelectLanguageView
        android:id="@+id/select_language"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:x_column="1"
        app:x_canShowBottomAction="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/x_toolbar"
        app:x_listLanguage="list_12_language" />


</androidx.constraintlayout.widget.ConstraintLayout>