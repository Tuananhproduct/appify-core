<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XToolbar" parent="android:TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ItemLanguage.Selected" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawableEnd">@drawable/ic_radio_selected</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="ItemLanguage.Normal" parent="android:TextAppearance">
        <item name="android:drawableStart">@drawable/ae</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableEnd">@drawable/ic_radio_unselected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>
</resources>