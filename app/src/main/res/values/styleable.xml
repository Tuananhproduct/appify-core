<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XToolbar">
        <attr name="xtb_title" format="string" />
        <attr name="xtb_colorTitle" format="color" />

        <attr name="xtb_visibilityTitle" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_visibilityRight" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_visibilityLeft" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_gravityTitle" format="integer">
            <flag name="start" value="0x00800003" />
            <flag name="center" value="0x11" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="xtb_titleStyle" format="integer" />

        <attr name="xtb_iconRight" format="reference" />
        <attr name="xtb_iconLeft" format="reference" />
        <attr name="xtb_background" format="color" />

        <attr name="xtb_cardElevation" format="reference" />
        <attr name="xtb_canShowLine" format="boolean" />

    </declare-styleable>

    <declare-styleable name="SelectLanguageView">
        <attr name="x_backgroundItem_selected" format="reference" />
        <attr name="x_backgroundItem" format="reference" />

        <attr name="x_titleItemStyle" format="integer" />
        <attr name="x_titleItemStyle_selected" format="integer" />

        <attr name="x_positionSelected" format="integer" />

        <attr name="x_background" format="reference" />

        <attr name="x_listLanguage" format="integer">
            <flag name="custom" value="3" />
            <flag name="list_6_language" value="6" />
            <flag name="list_12_language" value="12" />
        </attr>


    </declare-styleable>
</resources>