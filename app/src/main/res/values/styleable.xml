<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="XToolbar">
        <attr name="xtb_title" format="string" />
        <attr name="xtb_colorTitle" format="color" />
        <attr name="xtb_titleStyle" format="reference" />

        <attr name="xtb_visibilityTitle" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_visibilityRight" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_visibilityLeft" format="integer">
            <flag name="visible" value="0" />
            <flag name="invisible" value="4" />
            <flag name="gone" value="8" />
        </attr>

        <attr name="xtb_gravityTitle" format="integer">
            <flag name="start" value="0x00800003" />
            <flag name="center" value="0x11" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="xtb_iconRight" format="reference" />
        <attr name="xtb_iconLeft" format="reference" />
        <attr name="xtb_background" format="color" />

        <attr name="xtb_textRight" format="string" />
        <attr name="xtb_backgroundRight" format="reference" />
        <attr name="xtb_colorTextRight" format="color" />
        <attr name="xtb_textRightStyle" format="reference" />

        <attr name="xtb_cardElevation" format="dimension" />
        <attr name="xtb_canShowLine" format="boolean" />

    </declare-styleable>

    <declare-styleable name="LanguageView">
        <attr name="lv_backgroundItem_selected" format="reference" />
        <attr name="lv_backgroundItem" format="reference" />

        <attr name="lv_titleItemStyle" format="reference" />
        <attr name="lv_titleItemStyle_selected" format="reference" />

        <attr name="lv_itemStyle" format="reference" />
        <attr name="lv_itemStyle_selected" format="reference" />

        <attr name="lv_positionSelected" format="integer" />

        <attr name="lv_background" format="reference" />
        <attr name="lv_heightItem" format="dimension" />
        <attr name="lv_sizeFlag" format="dimension" />

        <attr name="lv_column" format="integer" />

        <attr name="lv_backgroundBottomAction" format="reference" />
        <attr name="lv_colorTitleBottomAction" format="color" />
        <attr name="lv_bottomActionStyle" format="reference" />
        <attr name="lv_canShowBottomAction" format="boolean" />

        <attr name="lv_listLanguage" format="integer">
            <flag name="list_custom" value="3" />
            <flag name="list_6_language" value="6" />
            <flag name="list_12_language" value="12" />
        </attr>

        <attr name="lv_gravityAds" format="integer">
            <flag name="top" value="2" />
            <flag name="bottom" value="4" />
        </attr>


    </declare-styleable>

    <declare-styleable name="OnboardingView">
        <attr name="iv_layout_id_1" format="reference" />
        <attr name="iv_layout_id_2" format="reference" />
        <attr name="iv_layout_id_3" format="reference" />

        <attr name="iv_background" format="reference" />

        <attr name="iv_backgroundNext" format="reference" />
        <attr name="iv_nextStyle" format="reference" />
        <attr name="iv_nextTextColor" format="color" />
        <attr name="iv_nextIcon" format="reference" />

        <attr name="iv_dotsColor" format="color" />
        <attr name="iv_selectedDotsColor" format="color" />
        <attr name="iv_dotsShape" format="integer">
            <flag name="pill" value="4" />
            <flag name="circle" value="8" />
        </attr>

        <attr name="iv_gravityAction_normal" format="integer">
            <flag name="top" value="1" />
            <flag name="bottom" value="3" />
        </attr>

        <attr name="iv_gravityAction_corner" format="integer">
            <flag name="top" value="1" />
            <flag name="bottom" value="3" />
        </attr>

        <attr name="iv_gravityAction_center" format="integer">
            <flag name="bottom" value="3" />
        </attr>

        <attr name="iv_gravityAction_icon" format="integer">
            <flag name="top" value="1" />
            <flag name="bottom" value="3" />
        </attr>

        <attr name="iv_gravityAds" format="integer">
            <flag name="middle" value="2" />
            <flag name="bottom" value="6" />
        </attr>

    </declare-styleable>
</resources>